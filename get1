#Number 2
x<- as.integer(2) 
y <-3.0

print(x)
print(y)
print(class(x))
print(class(y))
sumThem<-sum(x, y)
print(sumThem)
print(typeof(sumThem))
intThem<-(as.integer(sumThem))
print(intThem)
print(typeof(intThem))

#Numbe 3
