#Number 7
worms<-341
maxWorms<-26

boxesNeeded<-ceiling(worms/maxWorms)
print(boxesNeeded)

boxesMinOne<-boxesNeeded-1
ExtraWorms<- worms-(boxesMinOne*maxWorms)
print(ExtraWorms)

#Number 8
addThreeNumbers<-function(x,y,z)
{
  return(x+y+z)
}

#Number 9
shouldIEat<- function (x){
  if(x>=8 && x<=10){
    return ("Go Eat!")
  }
  if(x >=3 && x<8){
    return ("Don't eat!")
  }
  if( x>=1 && x<3){
    return ("Take a nap!")
  }
  if(x<1 || x>10){
    return ("Invlid input") 
  }
}

#Number 10
predictPopulationGrowth <- function (name, startNum, growthRate){
  
  day1<-startNum+(startNum*growthRate)
  day2<-day1+(day1*growthRate)
  day3<-day2+(day2*growthRate)
  growthRounded<-round(day3)
  growthInt<-as.integer(growthRounded)
  print(paste("After 3 days, there will be ", growthInt, " ", name, sep = ""))
}




